<Window x:Class="CheckersEngine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckersEngine"
        mc:Ignorable="d"
        Title="MainWindow" Height="308" Width="262">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ToolBarTray Grid.Row="0">
            <ToolBar>
                <Button Content="StartGame" Click="PlayButton_Click"/>
                <Button Content="Game Options" Click="GameOptinsClick" />
                <Button Content="Rules" Grid.Row="3" Click="RulesButton_Click"/>
            </ToolBar>
        </ToolBarTray>
        <local:CheckersUserControl x:Name="CheckersUserControl" Grid.Row="1" GameFinished="CheckersUserControl_GameFinished"/>
    </Grid>
</Window>
