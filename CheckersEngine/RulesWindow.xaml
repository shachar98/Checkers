<Window x:Class="CheckersEngine.RulesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckersEngine"
        mc:Ignorable="d"
        Title="RulesWindow" Height="600" Width="800">
    <Grid>
        <ScrollViewer FlowDirection="RightToLeft">
            <TextBlock  FontSize="14" Name="RulesTextBlock" Width="auto" Height="auto" TextWrapping="Wrap" Margin="5"/>
        </ScrollViewer>
    </Grid>
</Window>
